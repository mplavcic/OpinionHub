doctype html
html
  head
    title= title
    script(src='/javascripts/login.js')  
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class='container mt-5')
      .row.justify-content-center
        .col-12.text-center.mb-4
          p(class='lead') Log in to access your account and start exploring OpinionHub.
      
      .row.justify-content-center
        .col-sm-6.col-md-4
          h1(class='text-center mb-4')= title
          form#loginForm(action='/login' method='POST', class='border p-4 rounded shadow-sm bg-light')
            div(class='mb-3')
              label(for='name', class='form-label') Name:
              input(type='text' id='name' name='name' class='form-control' placeholder='Enter your name' required)
            div(class='mb-3')
              label(for='password', class='form-label') Password:
              input(type='password' id='password' name='password' class='form-control' placeholder='Enter your password' required)
            div
              button(type='submit', class='btn btn-primary w-100 mt-3') Login
          p#error-message(class='text-danger mt-2')
