doctype html
html
  head
    title= title
  body
    h1= title
    form(action="/login" method="POST")
      div
        label(for="name") Name:
        input(type="text" id="name" name="name" required)
      div
        label(for="password") Password:
        input(type="password" id="password" name="password" required)
      div
        button(type="submit") Login

