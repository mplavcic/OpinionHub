doctype html
html
    head
        title Create a New Survey
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="/javascripts/survey_create.js")
    body(class="container mt-4")
        h1 Create a new survey

        // Survey creation form
        form(action="/home/my-surveys/create", method="POST")
            div(class="mb-4")
                label(for="title", class="form-label") Title:
                input(type="text", name="title", id="title", class="form-control", required, placeholder="Enter survey title")

            div(class="mb-4")
                label(for="description", class="form-label") Description:
                textarea(name="description", id="description", class="form-control", rows="4", placeholder="Enter survey description")

            // Container for questions
            div(id="questions-container")
                h2 Questions
                button(type="button", class="btn btn-secondary", onclick="addQuestion()") Add Question

            button(type="submit", class="btn btn-primary mt-3") Create Survey
