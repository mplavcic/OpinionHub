extends layout

block content
  h1= title
  p Welcome to #{title}

  if survey_list.length
    ul
      each survey in survey_list
        li
          a(href=survey.public_url, class="fw-bold") #{survey.survey.title}
          span(class="text-muted")  - Published on #{new Date(survey.published_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}

  else
    p(class="alert alert-warning") There are no surveys yet.
