extends layout_home

block content
  h1 My surveys

  h2 Published surveys
  if published_surveys.length
    ul(class="list-group")
      each survey in published_surveys
        li(class="list-group-item d-flex justify-content-between align-items-center")
          a(href=survey.published_url, class="fw-bold")= survey.survey.title
          span(class="text-muted") Published on #{moment(survey.published_at).format("MMMM Do YYYY")}
  else
    p You haven't published any surveys yet.

  h2 Saved surveys
  if draft_surveys.length
    ul(class="list-group")
      each survey in draft_surveys
        li(class="list-group-item d-flex justify-content-between align-items-center")
          a(href=survey.saved_url, class="fw-bold")= survey.title
          span(class="text-muted") Created on #{moment(survey.createdAt).format("MMMM Do YYYY")}
  else
    p You haven't created any surveys yet.
